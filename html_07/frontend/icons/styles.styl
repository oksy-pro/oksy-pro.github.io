/* icons */

.icon
  display inline-block
  box-sizing border-box

.icon-media
  width: 32px
  height: 32px
  background: url(icons.png) 0 0 no-repeat

.icon-settings
  background-position: 0 0
.icon-comment
  background-position: -31px 0
.icon-music
  background-position: -63px 0

.radio-group
  text-align: center

.icon-circle
  width 18px
  height 18px
  border-radius 9px
  margin 3px
  cursor pointer

.icon-circle-dark-off
  background rgba(40, 40, 60, 0.7)
.icon-circle-dark-on
  background rgb(236, 236, 236)
  border 3px solid #446
.icon-circle-light-off
  background white
  border 1px solid #e3e3e3
.icon-circle-light-on
  background linear-gradient(#888, #222)
  border 3px solid #e3e3e3
