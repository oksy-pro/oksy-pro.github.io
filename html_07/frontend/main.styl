.to-left
  float left

.to-right
  float right

.c-align
  text-align center

.clearfix:after
  content ""
  clear both
  display block

.checkbox input
  position relative
  top 2px

.checkbox label
  display block
  cursor pointer

.shadow
  box-shadow 2px 2px 6px rgba(0, 0, 0, 0.5)

.container:before, .container:after, .container-fluid:before, .container-fluid:after
  clear both
  content " "
  display table

#media-width-detection-element
  // display none // 'width' set to 0 :-(
  visibility hidden
  width 960px

html
  position relative
  min-height 100%

body
  font-family OpenSans, serif
  background #f9f9f9
  // background #ccc
  font-size 16px
  font-weight 300
  // line-height 24px
  color #454545
  margin-bottom 200px

.container
  max-width 960px
  width 100%
  margin 0 auto

.relative
  position relative

.content-section
  padding-top 75px
  padding-bottom 65px
  border-bottom 1px solid #e6e6e6

.content-wrapper
  width 50%
  float left

p
  font-family OpenSans
  line-height 24px

a
  img
    border none

h1, h2, h3, h4, h5, h6
  font-family LeagueGothic, serif
  font-weight 400
